<!--pages/addTaskPerson/addTaskPerson.wxml-->
<view class='container'>
  <view class='contact-input'>
    <input bindinput='search'></input>
  </view>
  <view class='contact-msg' data-employeeName='{{item.contactName}}' wx:for='{{contactList}}' wx:key-index='index' wx:key='index' bindtap='addToTask'>
    <text class='contact-name'>{{item.contactName}}</text>
    <text>{{item.contactPhone}}</text>
  </view>
</view>
/* pages/register/register.wxss */
.title{
  width: 100%;
  height: 70px;
  line-height: 70px;
  text-align: center;
  color: #fff;
  font-size: 30px;
}
.row{
  padding: 5px 0 5px 15px;
  align-items: center;
}
.row label{
  width:65px;
  padding-right: 7px;
  text-align: right;
  color: #fff;
}
.row input{
  width: 63%;
  height: 30px;
  background: rgba(45,45,45,.15);
  border: 1px solid rgba(255,255,255,.15);
  text-shadow: 0 1px 2px rgba(0,0,0,.1);
  padding-left: 15px;
  color: #fff;
  border-radius: 6px;
}

.row-name{
  
}
.row-btn{
  margin-top: 20px;
  border: none;
}

.row-btn button{
  width: 100px;
  height: 40px;
  line-height: 40px;
}

.var-code{
  font-size: 14px;
  margin: 0 20px;
}
.var-code-row input{
  width: 22%;
}
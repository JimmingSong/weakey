<!--pages/addContact/addContact.wxml-->
<form bindsubmit='addContactPerson' class='addContact-box'>
  <view class='add-contact-view'>
    <label for='name'>姓名</label>
    <input id='name' name='name'></input>
  </view>
  <view class='add-contact-view'>
    <label for='phone'>手机号</label>
    <input id='phone' name='phone' type='number'></input>
  </view>
  <view class='add-contact-btn'>
    <button form-type='submit' type='primary'>保存</button>
  </view>
</form>
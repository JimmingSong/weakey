<!--pages/createProject/createProject.wxml-->
<view class='container form-bgc1'>
  <view class='create-title'>新建项目</view>
  <form bindsubmit='formSubmit' class='form-box'>
    <view class='dis-flex form-view'>
      <label for='projectName'>项目名称:</label>
      <input class='flex-grow-1 input' placeholder-class='color-fff' placeholder='请输入项目名称' name='projectName' id='projectName' />
    </view>
    <view class='dis-flex form-view'>
      <label for='projectLeader'>主负责人:</label>
      <picker class='flex-grow-1 input picker' range-key='contactName' value='{{leaderIndex}}' placeholder-class='color-fff' placeholder='请选择负责人' name='projectLeader' id='projectLeader' range='{{mainLeader}}' bindchange='selMainLeader'>
        <text>{{mainLeader[leaderIndex].contactName}}</text>
        <icon class='iconfont icon-enter'></icon>
      </picker>
      <!-- <input class='flex-grow-1 input' placeholder-class='color-fff' placeholder='请选择负责人' name='projectLeader' id='projectLeader' /> -->
    </view>
    <view class='dis-flex form-view'>
      <label for='bussiness'>业主姓名:</label>
      <input class='flex-grow-1 input' placeholder-class='color-fff' placeholder='业主联系人姓名' name='bussinessContact' id='bussiness' />
    </view>
    <view class='dis-flex form-view'>
      <label for='phone'>联系方式:</label>
      <input type='number' class='flex-grow-1 input' placeholder-class='color-fff' placeholder='业主联系电话' name='bussinessPhone' id='phone' />
    </view>
    <view class='dis-flex form-view'>
      <label for='projectType'>项目类型:</label>
      <picker class='flex-grow-1 input picker' mode='selector' placeholder='请选择项目类型' name='projectCategory' id='projectType' range-key='key' range="{{projectType}}" value='{{tpIndex}}' bindchange='selectTp'>
        <text>{{projectType[tpIndex].value}}</text>
        <icon class='iconfont icon-enter'></icon>
      </picker>
      <!-- <input class='flex-grow-1 input' placeholder='请选择项目类型' name='projectCategory' id='projectType' /> -->
    </view>
    <view class='dis-flex form-view'>
      <label for='status'>项目状态:</label>
      <picker range='{{projectStatus}}' class='flex-grow-1 input picker' placeholder='请输入项目地址' name='status' id='status' value='{{staIndex}}' range-key='value' bindchange='selectSta'>
        <text>{{projectStatus[staIndex].value}}</text>
        <icon class='iconfont icon-enter'></icon>
      </picker>
      <!-- <input class='flex-grow-1 input' placeholder='请输入项目地址' name='status' id='status' /> -->
    </view>
    <view class='dis-flex form-view'>
      <label for='position'>项目位置:</label>
      <view class='position_box flex-grow-1 input'>
        <input name='projectPosition' placeholder-class='color-fff' placeholder='请选择位置' class='input' value='{{address}}' id='position' bindtap='openMap' />
        <icon class='iconfont icon-enter icon_position' bindtap='openMap'></icon>
      </view>
    </view>
    <view class='form-button'>
      <button form-type='submit' type='primary'>提交</button>
    </view>
  </form>
</view>

/* pages/createProject/createProject.wxss */
.create-play{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 15px;
  height: 40px;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
.create-title{
  height: 50px;
  font-size: 26px;
  color: #fff;
  font-weight: bold;
  text-align: center;
}
.create-play icon{
  font-size: 20px;
}
.form-box label{
  width: 30%;
  color: #fff;
  text-align: center;
}
.form-view{
  padding: 5px 0;
  align-items: center;
}
.form-button{
  margin: 10px;
}
.position_box{
  position: relative;
}
.position_box input{
  width: 85%;
  background: transparent;
  border: none;
  padding-left: 0;
}
.icon_position{
  position: absolute;
  top: 0;
  right: 10px;
  font-size: 20px;
  z-index: 10;
  color: #fff;
}

.picker icon{
  position: absolute;
  right: 10px;
  font-size: 20px;
}
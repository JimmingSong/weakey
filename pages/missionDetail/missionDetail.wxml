<!--pages/missionDetail/missionDetail.wxml-->
<view class='container' style='padding-top:0;'>
  <form bindsubmit='formSubmit' class='form-box'>
    <view class='detail-operator'>
      <!-- <icon class='iconfont icon-return' bindtap='back'></icon> -->
      <!-- <button size='mini' bindtap='back'>返回</button> -->
      <button size='mini' wx:if='{{disable}}' bindtap='modifyStatus'>编辑</button>
      <button size='mini' wx:else form-type='submit' type='primary'>确定</button>
      <!-- <icon class='iconfont icon-brush_fill' bindtap='modifyStatus'></icon> -->
    </view>
    <view class='dis-flex form-view'>
      <label for='projectName'>任务名称</label>
      <input class='flex-grow-1' value='{{formData.taskName}}' disabled='{{disable}}' placeholder='请输入项目名称' name='taskName' id='projectName' />
    </view>
    <view class='dis-flex form-view'>
      <label for='projectLeader'>任务类型</label>
      <picker range='{{typeList}}' disabled='{{disable}}' bindchange='pickChange' range-key='v' value='{{index}}' name='taskType' id='projectLeader'>
        <view>{{typeList[index].v}}</view>
      </picker>
      <!-- <input class='flex-grow-1' value='{{formData.taskType}}' bindfocus='showSel' disabled='{{disable}}' placeholder='请选择负责人' name='taskType' id='projectLeader' /> -->
    </view>
    <view class='dis-flex form-view'>
      <label for='bussiness'>任务属性</label>
      <input class='flex-grow-1' value='{{formData.taskProperty}}' disabled='{{disable}}' placeholder='业主联系人姓名' name='taskProperty' id='bussiness' />
    </view>
    <view class='dis-flex form-view'>
      <label for='phone'>任务负责人</label>
      <input type='number' class='flex-grow-1' value='{{formData.taskLeader}}' disabled='{{disable}}' placeholder='业主联系电话' name='taskLeader' id='phone' />
    </view>
     <view class='dis-flex form-view people-row'>
      <label for='phone'>任务相关人员</label>
      <text class='iconfont icon-addpeople_fill people'></text>
    </view>
    <view class='dis-flex form-view'>
      <label for='position'>项目位置</label>
      <view class='dis-flex position_box flex-grow-1'>
        <input name='position' disabled='{{disable}}' value='{{formData.taskPosition}}' id='position' bindtap='openMap' name='taskPosition' />
        <icon class='iconfont icon-coordinates_fill icon_position'></icon>
      </view>
    </view>
    <view class='form-button'>
      <button type='warn' bindtap='deleteMission'>删除</button>
    </view>
  </form>
</view>


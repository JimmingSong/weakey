/* pages/login/login.wxss */
.box{
  height: 100vh
}
.title{
  width: 100%;
  font-size: 30px;
  padding-top: 30px;
  color: #fff;
  text-align: center;
}
.row{
  display: flex;
  justify-content: center;
  margin: 20px 0;
  padding: 5px 0 5px 15px;
  align-items: center;
}
.row label{
  width:65px;
  padding-right: 7px;
  text-align: right;
}
.row input{
  width: 80%;
  height: 35px;
  background: rgba(45,45,45,.15);
  border: 1px solid rgba(255,255,255,.15);
  text-shadow: 0 1px 2px rgba(0,0,0,.1);
  padding-left: 15px;
  color: #fff;
  border-radius: 6px;
}
.row-name{
  
}
.row-btn{
  margin-top: 20px;
  border: none;
}
.row-btn button{
  width: 100px;
  height: 40px;
  line-height: 40px;
}
.var-code{
  font-size: 14px;
}
.placeholder{
  color: #fff
}
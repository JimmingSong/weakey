<!--pages/createProject/createProject.wxml-->
<view class='container' style='padding-top:0;'>
  <form bindsubmit='formSubmit' class='form-box'>
    <view class='detail-operator'>
      <!-- <icon class='iconfont icon-return' bindtap='back'></icon> -->
      <!-- <button size='mini' bindtap='back'>返回</button> -->
      <button size='mini' wx:if='{{disable}}' bindtap='modifyStatus'>编辑</button>
      <button size='mini' wx:else type='primary' form-type='submit'>确定</button>
      <!-- <icon class='iconfont icon-brush_fill' bindtap='modifyStatus'></icon> -->
    </view>
    <view class='dis-flex form-view'>
      <label for='projectName'>项目名称:</label>
      <input class='flex-grow-1' value='{{projectData.projectName}}' disabled='{{disable}}' placeholder='请输入项目名称' name='projectName' id='projectName' />
    </view>
    <view class='dis-flex form-view'>
      <label for='projectLeader'>主负责人:</label>
      <input class='flex-grow-1' value='{{projectData.projectLeader}}' disabled='{{disable}}' placeholder='请选择负责人' name='projectLeader' id='projectLeader' />
    </view>
    <view class='dis-flex form-view'>
      <label for='bussiness'>业主姓名:</label>
      <input class='flex-grow-1' value='{{projectData.bussinessContact}}' disabled='{{disable}}' placeholder='业主联系人姓名' name='bussinessContact' id='bussiness' />
    </view>
    <view class='dis-flex form-view'>
      <label for='phone'>联系方式:</label>
      <input type='number' class='flex-grow-1' value='{{projectData.bussinessPhone}}'  disabled='{{disable}}' placeholder='业主联系电话' name='bussinessPhone' id='phone' />
    </view>
    <view class='dis-flex form-view'>
      <label for='projectType'>项目类型:</label>
      <input class='flex-grow-1' value='{{projectData.projectCategory}}' disabled='{{disable}}' placeholder='请选择项目类型' name='projectCategory' id='projectType' />
    </view>
    <view class='dis-flex form-view'>
      <label for='status'>项目状态:</label>
      <input class='flex-grow-1' value='{{projectData.status}}' disabled='{{disable}}' placeholder='请输入项目地址' name='status' id='status' />
    </view>
    <view class='dis-flex form-view'>
      <label for='position'>项目位置:</label>
      <view class='dis-flex position_box flex-grow-1'>
        <input name='projectPosition' disabled='{{disable}}' value='{{projectData.projectPosition}}' id='position' bindtap='openMap' />
        <icon class='iconfont icon-coordinates_fill icon_position'></icon>
      </view>
    </view>
    <view class='form-button'>
      <button type='warn' bindtap='deleteCurData'>删除</button>
    </view>
  </form>
</view>
